type Mutation {
  createBook(book: BookInput): Book
}

type Query {
  allBooks: [Book]
  getBook(bookId: Int): Book
}

type Book {
  id: ID!
  title: String
  desc: String
  author: String
  price: Float
  pages: Int
}

type Author {
  id: ID!
  name: String!
}

input BookInput {
  title: String
  desc: String
  author: String
  price: Float
  pages: Int
}
